// Defines/Variables
// ------------------------------------------------------------------------------------------------------------

int leds [] = {2, 3, 4, 5, 6 , 7};
#define an5 A5
int val;

// ------------------------------------------------------------------------------------------------------------
// Source
// ------------------------------------------------------------------------------------------------------------

void acender(int x) {
  int i;
  for (i = 0; i < x; i++) {
    digitalWrite(leds[i], HIGH);
  }
  for (i = x; i < 6; i++) {
    digitalWrite(leds[i], LOW);
  }
}

// ------------------------------------------------------------------------------------------------------------
// Source
// ------------------------------------------------------------------------------------------------------------

void setup() {
  for (int i = 0; i < 6; i++) {
    pinMode(leds[i], OUTPUT);
  }
  pinMode(an5, INPUT);
}
void loop() {
  // Analogico = 0 a 1023
  // PWM = 0 a 255
  // Sintaxe = map(leitura,min_val_entrada, max_val_entrada,min_val_saida, max_val_saida);
  // analogWrite(led, map(analogRead(an5), 0, 1023, 0, 255));

  val = analogRead(an5);
  acender(map(val, 0, 1023, 0, 6));
}
