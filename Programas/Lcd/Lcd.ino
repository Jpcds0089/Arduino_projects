#include <LiquidCrystal.h>
LiquidCrystal lcd(7, 6, 5, 4, 3, 2);

// ------------------------------------------------------------------------------------------------------------
// Source
// ------------------------------------------------------------------------------------------------------------

void setup() {
  lcd.begin(16, 2);
  lcd.clear();
}

void loop() {
  lcd.setCursor(3, 0);
  lcd.print("TESTANDO");
  
  lcd.setCursor(4, 1);
  lcd.print("O TESTE");
  delay(3000);
}
