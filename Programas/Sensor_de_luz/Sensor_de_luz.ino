#define an0 A0
int leds [] = {2, 3, 4, 5, 6, 7};
int luz [] = {15, 40, 80, 120, 160, 210};
int vldr = 0;

// ------------------------------------------------------------------------------------------------------------
// Functions
// ------------------------------------------------------------------------------------------------------------

void LigarLed(int brilho, int led) {
  if (vldr <= brilho) {
    digitalWrite(led, HIGH);
    delay(25);
  } else {
    
    digitalWrite(led, LOW);
  }
}

// ------------------------------------------------------------------------------------------------------------
// Source
// ------------------------------------------------------------------------------------------------------------


void setup() {
  pinMode(an0, INPUT);
  Serial.begin(9600);
  for(int i=0; i<6; i++) {
    pinMode(leds[i], OUTPUT);
    Serial.println(leds[i]);
  }
}
void loop() {
  vldr = analogRead(an0);
  Serial.println(vldr);
  delay(500);
  LigarLed(luz[5], leds[5]);
  LigarLed(luz[4], leds[4]);
  LigarLed(luz[3], leds[3]);
  LigarLed(luz[2], leds[2]);
  LigarLed(luz[1], leds[1]);
  LigarLed(luz[0], leds[0]);
}
